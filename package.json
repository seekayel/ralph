{
  "name": "ralph",
  "version": "0.1.0",
  "description": "CLI tool for AI-assisted development workflow using Claude Code and Codex",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ralph": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "bun run scripts/bundle-assets.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run scripts/bundle-assets.ts && bun run src/index.ts",
    "test": "bun test",
    "lint": "bunx @biomejs/biome lint src/",
    "lint:fix": "bunx @biomejs/biome lint --write src/",
    "format": "bunx @biomejs/biome format --write src/",
    "check": "bunx @biomejs/biome check --write src/",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": [
    "cli",
    "ai",
    "development",
    "workflow",
    "claude",
    "codex"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.1.14",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "commander": "12.1.0",
    "yaml": "2.6.1"
  },
  "engines": {
    "bun": ">=1.3.6"
  }
}
